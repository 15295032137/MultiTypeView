<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/space_4"
    android:paddingLeft="@dimen/space_8"
    android:paddingRight="@dimen/space_8"
    android:paddingTop="@dimen/space_4">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical">

                <TextView
                    style="@style/text_normal"
                    android:drawableLeft="@drawable/hotel"
                    android:gravity="center"
                    android:text="推荐行程" />
            </LinearLayout>

            <View style="@style/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/sanya" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_normal"
                        android:layout_marginTop="8dp"
                        android:text="海南4日经典行程" />

                    <TextView
                        style="@style/text_secondary"
                        android:layout_marginTop="@dimen/space_4"
                        android:text="保亭 →三亚 呀诺达 - 槟榔谷 - 骏达车技表演馆\n三亚 亚龙湾海底世界 - 蜈支洲岛 - 南田温泉\n三亚 南山海上观音 - 天涯海角 - 三亚免税店" />
                </LinearLayout>
            </LinearLayout>

            <View
                style="@style/divider"
                android:layout_marginTop="@dimen/space_8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/sanya" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_normal"
                        android:layout_marginTop="8dp"
                        android:text="海南3日经典行程" />

                    <TextView
                        style="@style/text_secondary"
                        android:layout_marginTop="@dimen/space_4"
                        android:text="三亚 呀诺达 - 槟榔谷 - 骏达车技表演馆\n三亚 亚龙湾海底世界 - 蜈支洲岛 - 三亚千古情\n三亚 南山海上观音 - 天涯海角 - 三亚免税店" />
                </LinearLayout>
            </LinearLayout>

            <View
                style="@style/divider"
                android:layout_marginTop="@dimen/space_8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/sanya" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_normal"
                        android:layout_marginTop="8dp"
                        android:text="执手相笑，天涯海角——海南蜜月5日游" />

                    <TextView
                        style="@style/text_secondary"
                        android:layout_marginTop="@dimen/space_4"
                        android:text="三亚 呀诺达 - 槟榔谷\n三亚 亚龙湾海底世界 - 蜈支洲岛\n三亚 南山海上观音 - 天涯海角\三亚 椰梦长廊 - 三亚湾" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>